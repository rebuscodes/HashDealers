import uuid
import hashlib

def hash_password(password):
    salt = uuid.uuid4().hex
    return hashlib.sha256(salt.encode() + password.encode()).hexdigest() + ':' + salt
    
def check_password(hashed_password, user_password):
    password, salt = hashed_password.split(':')
    return password == hashlib.sha256(salt.encode() + user_password.encode()).hexdigest()

print "##########Welcome to Ka$her string hashing tool!#########"

new_pass = raw_input('Please enter a key to hash: ')
hashed_password = hash_password(new_pass)

print('The hashed key for you to store in the database is: ' + hashed_password)

old_pass = raw_input('Now please enter the key again to check: ')
if check_password(hashed_password, old_pass):
    print('You entered the right key. But don`t be rash, go hide your hash.')
else:
    print('I am sorry but the key you entered does not match')
